<Page x:Class="HCI_Vezbe_Projekat.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Vezbe_Projekat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Border Background="LightBlue" BorderThickness="2,2,2,2" BorderBrush="AntiqueWhite" CornerRadius="2"
            HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >


            <Label Margin="10" >Sign in to SIITDelivery</Label>

            <Label  Content="{Binding ElementName=username_tb, Path=Text}" ></Label>
            <TextBox  x:Name="username_tb" Text="{Binding Path=Username, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" ></TextBox>

            <Label >Password:</Label>
            <TextBox  x:Name="password_tb" Text="{Binding Path=Password, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Button Content="Sign in" x:Name="sign_in_btn" Margin="10" Click="sign_in_btn_Click"></Button>

        </StackPanel>
    </Border>

</Page>
