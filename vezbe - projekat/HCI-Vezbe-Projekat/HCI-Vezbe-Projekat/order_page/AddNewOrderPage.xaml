<Page x:Class="HCI_Vezbe_Projekat.order_page.AddNewOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Vezbe_Projekat.order_page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewOrderPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label> Name: </Label>
        <TextBox Grid.Column="1" x:Name="tb_name"
                 Text="{Binding Path=Name, UpdateSourceTrigger=LostFocus}"></TextBox>
        <TextBox x:Name="new_tb"/>
        <TextBlock Grid.Column="2" Text="{Binding ElementName=tb_name, Path=Text}"/>
    </Grid>
</Page>
