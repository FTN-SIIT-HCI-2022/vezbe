<Page x:Class="HCI_Vezbe_Projekat.offer_page.AddSpecialOfferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Vezbe_Projekat.offer_page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSpecialOfferPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label> Name: </Label>
        <TextBox x:Name="tb_name" Grid.Column="1"
           Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"></TextBox>


        <Label Grid.Row="1">Price:</Label>
        <TextBox x:Name="tb_price" Grid.Column="1" Grid.Row="1"></TextBox>

        <TextBlock Text="{Binding Path=Name, Mode=OneWay}" Grid.Column="2"/>

        <TextBlock Text="{Binding ElementName=tb_name, Path=Text}" Grid.Column="2" Grid.Row="2"/>
    </Grid>
</Page>
